<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plainbackground"
    tools:context=".PolicePortal">
    <RelativeLayout
        android:id="@+id/topdisplay"
        android:layout_width="match_parent"
        android:background="#A70012"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="PAKISTAN SAFE CITIZEN PROTAL"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

    </TextView>
    <ImageView
        android:id="@+id/policeimg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/policeimage"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toptext"
        >

    </ImageView>
    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="WELCOME"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/policeimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

    </TextView>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER DASHBOARD"
        android:layout_below="@+id/topdisplay"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:id="@+id/header"
        android:layout_marginLeft="20dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/myordercard"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        android:background="@drawable/noboaderbg"
        android:gravity="start">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/btnemergency"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/emerg"
            android:layout_marginLeft="10dp">
        </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:textColor="@color/primery"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="2dp">

    </TextView>
    </LinearLayout>
       <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/btnhistory"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/history"
            android:layout_marginLeft="10dp">
        </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crime History"
        android:textColor="@color/primery"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="2dp">

    </TextView>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnhelp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/help"
                android:layout_marginLeft="10dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="@color/primery"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="2dp">

            </TextView>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER PROFILE"
        android:layout_below="@+id/myordercard"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:id="@+id/profiletext"
        android:layout_marginLeft="20dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/dashboardcard"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/profiletext"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        android:background="@drawable/noboaderbg"
        android:gravity="start">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnprofile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"
                android:layout_marginLeft="10dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/primery"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="2dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnsignout"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/logout"
                android:layout_marginLeft="10dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:layout_marginTop="8dp"
                android:textColor="@color/primery"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="2dp">

            </TextView>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>